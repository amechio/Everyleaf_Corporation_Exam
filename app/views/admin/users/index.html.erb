<h1>ユーザー情報</h1>
<%= notice %>
<table>
  <tr>
    <th>ユーザー名</th>
    <th>メールアドレス</th>
    <th>権限</th>
    <th>タスク数</th>
  </tr>
  <% @users.eager_load(:tasks).each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.role %></td>
    <td><%= user.tasks.all.count %></td>
    <td><%= link_to "#{user.name}を編集", edit_admin_user_path(user.id) %></td>
    <td><%= link_to "#{user.name}を削除", admin_user_path(user.id), method: :delete %></td>
    <td><%= link_to "#{user.name}のプロフィール", user_path(user.id) %></td>
  </tr>
  <% end %>
</table>
