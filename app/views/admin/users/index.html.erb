<h1>ユーザー情報</h1>
<table>
  <tr>
    <th>ユーザー名</th>
    <th>メールアドレス</th>
    <th>権限</th>
    <th>タスク数</th>
  </tr>
  <% @users.eager_load(:tasks).each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.role %></td>
    <td><%= user.tasks.all.count %></td>
    <td><%= link_to '編集', edit_admin_user_path(user.id) %></td>
    <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
    <td><%= link_to 'ユーザーのプロフィール', user_path(user.id) %></td>
  </tr>
  <% end %>
</table>
